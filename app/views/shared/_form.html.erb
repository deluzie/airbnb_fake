<div class="container booking-form">
  <div class="booking-info">
    <h1>Save Your Spot</h1>
    <p>Contact the owner to reserve a spot in this workshop, then get to work!</p>
  </div>
  <div class="form-wrapper">
    <%= simple_form_for([@workshop, @booking]) do |f| %>
      <%= f.input :check_in, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :check_out, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Save your spot!", class: "btn btn-warning form-control" %>
    <% end %>
  </div>
</div>
